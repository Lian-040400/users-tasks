{
  "include": [
    "**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",    
    "rootDir": "./",      
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "target": "esnext",
    "module": "esNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
